<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:_2kod"
             x:Class="_2kod.App">
  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Styles>
    <FluentTheme Mode="Dark"/>

    <Style Selector="TextBox.MainWritableContent">
      <Setter Property="Foreground" Value="#B18E64"/>
      <Setter Property="Padding" Value="20"/>
      <Setter Property="FontFamily" Value="Consolas, 'Courier New', monospace"/>
      <Setter Property="Background" Value="#000"/>
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="AcceptsReturn" Value="True"/>
      <Setter Property="AcceptsTab" Value="True" />
    </Style>

    <Style Selector="TextBox.MainWritableContent:pointerover">
      <Setter Property="Foreground" Value="red" />
    </Style>


    <Style Selector="TextBox.MainWritableContent:focus">
      <Setter Property="Foreground" Value="green" />
      <Setter Property="Background" Value="#fff"/>
    </Style>

  </Application.Styles>
</Application>
