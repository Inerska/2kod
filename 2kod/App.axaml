<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:_2kod"
             xmlns:avaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             x:Class="_2kod.App">
  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Styles>

    <FluentTheme Mode="Dark" />

    <StyleInclude Source="avares://AvaloniaEdit/AvaloniaEdit.xaml"/>

    <Style Selector="avaloniaEdit|TextEditor.MainWritableContent">
      <Setter Property="Foreground" Value="#B18E64"/>
      <Setter Property="Background" Value="#161616"/>
      <Setter Property="FontFamily" Value="Consolas, 'Courier New', monospace"/>
      <Setter Property="FontSize" Value="17" />

      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="BorderBrush" Value="Transparent" />
    </Style>

    <Style Selector="avaloniaEdit|TextEditor.MainWritableContent:pointerover /template/ Border#PART_BorderElement">
      <Setter Property="Background" Value="black" />
    </Style>

    <Style Selector="avaloniaEdit|TextEditor.MainWritableContent:focus /template/ Border#PART_BorderElement">
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="Background" Value="black" />
    </Style>

  </Application.Styles>
</Application>
